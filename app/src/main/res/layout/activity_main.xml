<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundsm" />


    <ScrollView

        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/witam" />

            <Button
                android:id="@+id/blogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shapes"
                android:text="@string/login"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/brej"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shapes"
                android:text="@string/zarejestruj"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/bpanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shapes"
                android:layout_marginTop="5dp"
                android:text="Panel klienta"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/brez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shapes"
                android:layout_marginTop="5dp"
                android:text="@string/zarezerwuj_st"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/binf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shapes"
                android:text="@string/informacje_o_klubie"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/bprices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shapes"
                android:text="@string/cennik"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>

