<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sara.billards.PricesAct"
    android:background="@drawable/backgroundsm">>

    <Button
        android:id="@+id/button"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:text="GET PRICES"
        android:background="@drawable/button_shapes"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="54dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />



            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_below="@+id/textView"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Club:"
                android:paddingBottom="20dp"
                android:textSize="30sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewId_Club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/textView4"
                android:paddingBottom="20dp"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/textViewId_Club"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:text="[id]"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView4"
                android:paddingEnd="10dp"
                android:text="Week:"
                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView4"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView6"
                android:gravity="center"
                android:paddingBottom="30dp"

                android:textColor="@android:color/white"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/textView4"
                android:layout_toEndOf="@+id/textViewWeek"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:text=" zł"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView8"
                android:paddingEnd="10dp"
                android:text="Week afternoon: "

                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewWeek_aft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_below="@+id/textView8"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView10"
                android:paddingBottom="20dp"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/textView8"
                android:layout_toEndOf="@+id/textViewWeek_aft"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:text=" zł"
                android:textColor="@android:color/white"
                android:textSize="30sp" />




            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView6"
                android:paddingEnd="10dp"
                android:text="Weekend: "
                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewWeekend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView6"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView8"
                android:paddingBottom="20dp"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/textView6"
                android:layout_toEndOf="@+id/textViewWeekend"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:text=" zł"
                android:textColor="@android:color/white"
                android:textSize="30sp" />



            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="40dp"
                android:paddingTop="10dp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="2" />


        </RelativeLayout>
    </ScrollView>

    </RelativeLayout>
