<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsm"
    tools:context="com.example.sara.billards.HoursActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:text="Witaj "
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView1"
        android:gravity="start"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        android:shadowRadius="2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/textView1"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/brezerv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_shapes"
                android:text="Moje rezerwacje"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/bpassch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/brezerv"
                android:background="@drawable/button_shapes"
                android:text="Zmień hasło"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/bpassch"
                android:background="@drawable/button_shapes"
                android:text="Wyloguj"
                android:textColor="#FFFFFF" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
