<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sara.billards.EndActivity"
    android:background="@drawable/backgroundsm">>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="40dp"
                android:paddingTop="10dp"
                android:text="Podsumowanie rezerwacji"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="2" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView3"
                android:paddingEnd="10dp"
                android:text="Użytkownik:"
                android:paddingBottom="20dp"
                android:textSize="30sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView4"
                android:paddingBottom="20dp"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView4"
                android:paddingEnd="10dp"
                android:text="Stół:"
                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView4"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView6"
                android:gravity="center"
                android:paddingBottom="30dp"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView6"
                android:paddingEnd="10dp"
                android:text="Data: "
                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView6"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView8"
                android:paddingBottom="20dp"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:layout_below="@+id/textView8"
                android:paddingEnd="10dp"
                android:text="Godzina: "

                android:paddingBottom="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_below="@+id/textView8"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView10"
                android:paddingBottom="20dp"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView8"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView11"
                android:paddingBottom="20dp"
                android:text=" - "
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView8"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView12"
                android:paddingBottom="20dp"

                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonPUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scrollView"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_shapes"
        android:text="Rezerwuj"
        android:textColor="#FFFFFF" />


</RelativeLayout>
